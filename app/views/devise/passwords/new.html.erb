<div class="container-fluid text-center mt-2">
<div class="row">
<div class="col-md-4 offset-md-4">
    <h1 class="h3 mb-3 fw-normal">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autocomplete:"Email", class:"form-control", id:"floatingEmail" %>
        <label for="floatingEmail"><%= f.label :email %></label>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Send me reset password instructions", class:"w-100 btn btn-primary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
</div>