<div class="container-fluid text-center mt-2">
<div class="row">
<div class="col-md-4 offset-md-4">
    <h1 class="h3 mb-3 fw-normal">Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="form-floating">
        <%= f.email_field :email, autocomplete:"Email", class:"form-control", id:"floatingEmail" %>
        <label><%= f.label :email %></label>
      </div>
      <% @user.errors.full_messages_for(:email).each do |message| %>
        <ul>
        <li class="text-danger text-start"><%= message %></li>
        </ul>
      <% end %>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete:"New-password", class:"form-control", id:"floatingPassword" %>
        <label><%= f.label :password %> <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /></label>
      </div>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <ul>
        <li class="text-danger text-start"><%= message %></li>
        </ul>
      <% end %>

      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete:"New-password", class:"form-control", id:"floatingPasswordConfirmation" %>
        <label><%= f.label :password_confirmation %></label>
      </div>
      <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
        <ul>
        <li class="text-danger text-start"><%= message %></li>
        </ul>
      <% end %>

      <div class="actions mb-3">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>

    <% end %>

    <div class="mb-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
</div>