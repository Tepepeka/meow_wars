<div class="card mx-3 my-1">
<div class="card-body py-1">
  <div class="d-flex justify-content-between align-items-center">
    <p><%= comment.body %></p>
    <% if owner?(comment) %>
      <%= link_to [comment.product, comment], data: { turbo_method: :delete,
                                                      turbo_confirm: "Are you sure?"
                                                    } do %>
        <i class="fa-solid fa-trash text-danger"></i>
      <%end%>
    <%end%>
  </div>
  <blockquote><footer class="blockquote-footer">by @<cite title="Source Title"><%=comment.user.name%></cite></footer></blockquote>
</div>
</div>