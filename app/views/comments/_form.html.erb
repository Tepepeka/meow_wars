<%= form_with model: [ @product, @product.comments.build ] do |form| %>

  <div class="form-floating m-3">
    <%= form.text_area :body, autocomplete:"body", class:"form-control", id:"floatingEmail" %>
    <label><%= form.label :body %></label>
  </div>
  
  <div class="actions m-3">
    <%= form.submit "Add comment", class:"btn btn-primary"%>
  </div>

<% end %>