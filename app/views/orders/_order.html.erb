<div  class="card mb-2 mt-2">
  <div class="card-body p-2">
  <h5>Ref #<%=link_to order.stripe_id, order%></h5>
  
  <p>Date : <%= order.payment_date.strftime("%m/%d/%Y @%I:%M%p")%></p>
  <table>
  <thead>
    <tr>
      <th class="text-center">Product</th>
      <th class="text-center">Price</th>
      <th class="text-center">Quantity</th>
      <th class="text-center">Total</th>
    </tr>
  </thead>
  <tbody>
    <% order.order_products.each do |detail| %>
      <tr>
        <td class="text-center"><%= detail.product.name %></td>
        <td class="text-center"><%= number_to_currency(detail.price) %></td>
        <td class="text-center"><%= detail.quantity %></td>
        <td class="text-center"><%= number_to_currency(detail.price * detail.quantity) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3"><strong>Total:</strong></td>
      <td><%= number_to_currency(order.total) %></td>
    </tr>
  </tbody>
</table>
</div>
</div>