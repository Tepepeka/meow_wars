<div id="<%= dom_id product %>">

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <%= form_with(url: cart_add_single_path) do |f| %>
    <%= f.hidden_field :id, value: product.id %>
    <%= f.submit "Add to cart" %>
  <% end %>

  <%= form_with(url: cart_remove_single_path) do |f| %>
    <%= f.hidden_field :id, value: product.id %>
    <%= f.submit "Remove to cart" %>
  <% end %>

</div>