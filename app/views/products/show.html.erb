
<div class="row">
  <div class="col-md-4 offset-md-4">
    <%= link_to sanitize("&larr; Back to products"), root_path %>
    <div class="card mt-2">
    <% if current_user %>
      <%= render @product,like_status: current_user.liked?(@product)  %>
    <% else %>
      <%= render @product %>
    <% end %>
      <div class="mb-3">
      <h5 class="mx-3">Comments :</h5>
      <% if @product.comments.present? %>
      <%= render @product.comments %>
      <% else %>
        <div class="card mx-3 my-1">
          <div class="card-body py-1">
            <h5 class="mb-0">No comments!</h5>
          </div>
        </div>
      <% end %>
      </div>
      <% if user_signed_in? %>
      <%= render 'comments/form' %>
      <% end %>
    </div>
  <div>
</div>